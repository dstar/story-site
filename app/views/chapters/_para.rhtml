<div class="paragraph">
  <a id="<%= ["p",para.id] %>"></a>
  <div class="parabody" id="<%= ["parabody",para.id] %>">
	  <%= render :partial => 'parabody', :object => para %>
  </div>
  <% if @chapter.status == 'draft' %>
	<% total_comments = para.pcomments.count(:conditions => "flag < 2") %>
	<% unread_comments = para.pcomments.count(:conditions => "flag < 2 and read <> 'yes'") %>
	<% denotation_class = "" %>
	<% denotation_class = 'class="unread_comments"' if unread_comments %>
	<% denotation_class = 'class="read_comments"' if read_comments and not unread_comments%>

	<div class="comments" <%= denotation_class %> id="comment_block_<%= para.id %>" >
	  <%= render :partial => 'comment_block', :locals => { :para => para } %>
	</div>
  <% end %>
</div>
