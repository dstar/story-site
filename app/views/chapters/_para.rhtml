<div class="paragraph">
  <a id="<%= ["p",para.id] %>"></a>
  <div class="parabody">
    <%= textilize(para.body) %>
    <p><%= link_to 'Edit this paragraph', :controller => 'paragraphs', :action => 'edit', :id => para.id %></p>
  </div>
  <% if @chapter.status == 'draft' %>
  <%= render :partial => 'comments_div' %>
  <% end %>
</div>
