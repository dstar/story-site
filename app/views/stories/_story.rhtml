<div>
  <li><h4><%= link_to story.title, index_url(:host => StoryHost(story.id)) %></h4>
<% logger.debug("#{story.inspect}") %>
  <% kw = "</p>" %>
  <% kw = " (Keywords: #{story.keywords})</p>" if story.keywords %>
  <%= our_markdown(story.description).sub(/<\/p>$/,kw).gsub(/<br \/>/, "</p><p>") %>
  </li>
</div>
