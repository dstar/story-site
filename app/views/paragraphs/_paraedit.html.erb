<%= @paragraphs.body_raw %>
<% form_remote_tag( :url => "/paragraphs/confirm_delete/#{@paragraphs.id}", :update => "parabody#{@paragraphs.id}") do -%>
    <%= submit_tag("Delete Paragraph", {:confirm => "Are you sure?"}) %>
<% end -%>
<% form_remote_tag :update => "parabody#{@paragraphs.id}", :url => "/paragraphs/update/#{@paragraphs.id}" do -%>
    <%= partial 'form', :with => @paragraphs%>
    <%= submit_tag 'Edit' %>
<% end -%>
