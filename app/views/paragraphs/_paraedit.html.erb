<%= @paragraphs.body_raw %>
<%= form_for @paragraphs, remote_form_attrs(:url => "/paragraphs/destroy/#{@paragraphs.id}", :action => "/paragraphs/confirm_delete/#{@paragraphs.id}", :update => "parabody#{@paragraphs.id}") do -%>
    <%= submit_tag("Delete Paragraph", :onclick => "return confirm('Are you sure?');" ) %>
<% end =%>
<%= form_for @paragraphs, remote_form_attrs(:update => "parabody#{@paragraphs.id}", :url => "/paragraphs/update/#{@paragraphs.id}") do -%>
    <%= partial 'form', :with => @paragraphs%>
    <%= submit_tag 'Edit' %>
<% end =%>
