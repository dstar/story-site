<h1>Editing paragraphs</h1>
<%= form_for @paragraphs, :action => "/paragraphs/confirm_delete/#{@paragraphs.id}" do -%>
    <%= submit_tag("Delete Paragraph", {:confirm => "Are you sure?"}) -%>
<% end =%>
<%= form_for @paragraphs, :action => "/paragraphs/update/#{@paragraphs.id}" do -%>
  <%= partial :form, :with => @paragraphs -%>
  <%= submit_tag 'Edit' -%>
<% end =%>

<hr/>

