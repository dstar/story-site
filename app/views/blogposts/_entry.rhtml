<div class="news" name=<%= ["entry",entry.id] %> >
<h2><%= entry.title %></h2>

<%= our_markdown(entry.body).gsub(/<br \/>/, "</p><p>") %>

<p><font size="-2">Posted on <%= entry.created_on %> by <%= entry.user %>

<% if @authinfo[:user_id] and User.find(@authinfo[:user_id]).has_site_permission('blogger')  %>
	<%= link_to 'edit', :controller => 'blog', :action => 'edit', :id => entry.id %>
<% end %>
</font></p>
</div>
