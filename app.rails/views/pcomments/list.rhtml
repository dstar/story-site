<h1>Listing paragraph comments</h1>

<table>
  <tr>
  <% for column in Pcomment.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
  </tr>

<% for pcomment in @pcomment %>
  <tr>
  <% for column in Pcomment.content_columns %>
    <td><%=h pcomment.send(column.name) %></td>
  <% end %>
    <td><%= link_to 'Show', :controller => 'chapters', :action => 'show',
      :id => Pcomment.chapterID(pcomment.id),
      :anchor => ["p",pcomment.paragraph_id] %></td>
    <td><%= link_to 'Edit', :action => 'edit', :id => pcomment %></td>
    <td><%= link_to 'Delete', { :action => 'destroy', :id => pcomment }, :confirm => 'Are you sure?', :post => true %></td>
  </tr>
<% end %>
</table>
